{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "../dist",
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/*.ts", "src/index.ts"]
}

